<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/app.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body class="bg-gray-100 text-gray-800 min-h-screen flex">
    <!-- Sidebar -->
    <aside
      class="w-64 bg-white shadow-md fixed top-0 left-0 h-full flex flex-col"
    >
      <%- include('partials/sidebar') %>
    </aside>

    <!-- Main content wrapper -->
    <div class="flex-1 flex flex-col min-h-screen ml-64">
      <!-- Header -->
      <header
        class="bg-white shadow-md fixed top-0 left-64 right-0 h-16 flex items-center px-6 z-10"
      >
        <%- include('partials/header') %>
      </header>

      <!-- Main content -->
      <main class="flex-1 mt-16 p-6 overflow-y-auto bg-gray-50">
        <%- body %>
      </main>

      <!-- Footer -->
      <%- include('partials/footer') %>
    </div>
  </body>
</html>
