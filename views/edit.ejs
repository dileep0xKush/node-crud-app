<div class="bg-white p-8 rounded-lg shadow-md mt-10">
  <form action="/users/edit/<%= user._id %>" method="POST" class="space-y-6">
    <div>
      <label for="name" class="block text-sm font-semibold text-gray-800 mb-1"
        >Name</label
      >
      <input
        type="text"
        id="name"
        name="name"
        value="<%= user.name %>"
        required
        placeholder="John Doe"
        class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition"
      />
    </div>

    <div>
      <label for="email" class="block text-sm font-semibold text-gray-800 mb-1"
        >Email</label
      >
      <input
        type="email"
        id="email"
        name="email"
        value="<%= user.email %>"
        required
        placeholder="john@example.com"
        class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:border-yellow-400 transition"
      />
    </div>

    <div class="flex items-center justify-between">
      <button
        type="submit"
        class="bg-yellow-500 text-white font-semibold px-6 py-3 rounded-md shadow hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 transition"
      >
        Update
      </button>
      <a href="/users/" class="text-blue-600 font-medium hover:underline"
        >Back</a
      >
    </div>
  </form>
</div>
