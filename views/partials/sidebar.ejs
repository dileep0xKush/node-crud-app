<!-- Sidebar -->
<aside class="w-64 bg-white shadow fixed top-0 left-0 h-full p-6 flex flex-col">
  <!-- Branding / Title -->
  <div class="mb-8">
    <h2 class="text-3xl font-extrabold text-blue-600">Dashboard</h2>
  </div>

  <!-- Navigation -->
  <nav class="flex flex-col space-y-2 flex-1 overflow-y-auto">
    <a
      href="/dashboard"
      class="flex items-center gap-3 px-3 py-2 rounded-md text-blue-600 font-semibold hover:bg-blue-100 transition-colors"
      aria-current="page"
    >
      <!-- Dashboard Icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 flex-shrink-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3 12l2-2m0 0l7-7 7 7M13 5v6h6m-7 4h.01M4 16h16"
        />
      </svg>
      Dashboard
    </a>

    <a
      href="/users"
      class="flex items-center gap-3 px-3 py-2 rounded-md text-blue-600 font-semibold hover:bg-blue-100 transition-colors"
    >
      <!-- Users Icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 flex-shrink-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M17 20h5v-2a4 4 0 00-3-3.87M9 20H4v-2a4 4 0 013-3.87M15 11a4 4 0 11-6 0 4 4 0 016 0z"
        />
      </svg>
      User List
    </a>

    <a
      href="/users/create"
      class="flex items-center gap-3 px-3 py-2 rounded-md text-blue-600 font-semibold hover:bg-blue-100 transition-colors"
    >
      <!-- Plus Icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 flex-shrink-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 4v16m8-8H4"
        />
      </svg>
      Add User
    </a>
    <a
      href="/products"
      class="flex items-center gap-3 px-3 py-2 rounded-md text-blue-600 font-semibold hover:bg-blue-100 transition-colors"
    >
      <!-- Plus Icon -->
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5 flex-shrink-0"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="2"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 4v16m8-8H4"
        />
      </svg>
      Add Products
    </a>
  </nav>

  <!-- Profile / Logout section -->
  <div class="mt-auto pt-6 border-t border-gray-200">
    <a
      href="/profile"
      class="flex items-center gap-3 px-3 py-2 rounded-md hover:bg-gray-100 transition-colors"
    >
      <img
        src="/images/profile.png"
        alt="User Avatar"
        class="w-8 h-8 rounded-full object-cover"
      />
      <span class="font-medium text-gray-700 truncate"
        ><%= authUser ? authUser.name : 'Guest' %></span
      >
    </a>

    <form action="/logout" method="POST" class="mt-3">
      <button
        type="submit"
        class="w-full text-left px-3 py-2 rounded-md text-red-600 font-semibold hover:bg-red-100 transition-colors"
      >
        Logout
      </button>
    </form>
  </div>
</aside>
