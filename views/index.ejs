<% if (users.length===0) { %>
    <p class="text-gray-500">No users found.</p>
    <% } else { %>
        <ul class="space-y-4">
            <% users.forEach(user=> { %>
                <li class="bg-white shadow-md rounded p-4 flex justify-between items-center">
                    <div>
                        <p class="text-lg font-semibold">
                            <%= user.name %>
                        </p>
                        <p class="text-gray-600 text-sm">
                            <%= user.email %>
                        </p>
                    </div>
                    <div class="flex space-x-2">
                        <a href="/edit/<%= user.id %>"
                            class="text-white bg-yellow-500 hover:bg-yellow-600 px-3 py-1 rounded text-sm">Edit</a>
                        <form action="/delete/<%= user.id %>" method="POST">
                            <button type="submit"
                                class="text-white bg-red-600 hover:bg-red-700 px-3 py-1 rounded text-sm">Delete</button>
                        </form>
                    </div>
                </li>
                <% }) %>
        </ul>
        <% } %>