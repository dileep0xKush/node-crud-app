<%- include('partials/header') %>

<form method="GET" action="/users" class="mb-6 flex justify-end gap-3">
  <input type="text" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>" placeholder="Search by name or email" class="w-48 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">
    Search
  </button>
</form>

<table class="min-w-full bg-white rounded shadow-md">
  <thead>
    <tr>
      <th class="py-3 px-6 bg-gray-100 font-bold text-gray-600 text-left">
        Name
      </th>
      <th class="py-3 px-6 bg-gray-100 font-bold text-gray-600 text-left">
        Email
      </th>
      <th class="py-3 px-6 bg-gray-100 font-bold text-gray-600 text-center">
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    <% if (users.length === 0) { %>
    <tr>
      <td colspan="3" class="py-4 px-6 text-center text-gray-500">
        No users found.
      </td>
    </tr>
    <% } else { %> <% users.forEach(user => { %>
    <tr class="border-b hover:bg-gray-50">
      <td class="py-4 px-6 text-gray-800"><%= user.name %></td>
      <td class="py-4 px-6 text-gray-600"><%= user.email %></td>
      <td class="py-4 px-6 flex justify-center space-x-3">
        <a href="/users/edit/<%= user._id %>" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded text-sm">
          Edit
        </a>
        <form action="/users/delete/<%= user._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?');">
          <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% }) %> <% } %>
  </tbody>
</table>

<% if (totalPages > 1) { %>
<div class="mt-8 flex justify-end space-x-2">
  <% const pagesToShow = []; for (let i = 1; i <= totalPages; i++) { if ( i <= 2
  || i > totalPages - 2 || (i >= currentPage - 1 && i <= currentPage + 1) ) {
  pagesToShow.push(i); } } let lastShown = 0; pagesToShow.forEach(i => { if (i -
  lastShown > 1) { %>
  <span class="px-2 py-1 text-gray-400">...</span>
  <% } lastShown = i; %>
  <a href="/users?page=<%= i %>&search=<%= search %>" class="px-3 py-1 rounded-md border <%= i === currentPage ? 'bg-blue-600 text-white' : 'bg-white text-gray-800 hover:bg-gray-200' %>">
    <%= i %>
  </a>
  <% }); %>
</div>
<% } %>