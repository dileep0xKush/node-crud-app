<div class="bg-white p-8 rounded-lg shadow-md  mt-10">
    <form action="/create" method="POST" class="space-y-6">

        <div>
            <label for="name" class="block text-sm font-semibold text-gray-800 mb-1">Name</label>
            <input type="text" id="name" name="name" required placeholder="John Doe" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm
                       focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
        </div>

        <div>
            <label for="email" class="block text-sm font-semibold text-gray-800 mb-1">Email</label>
            <input type="email" id="email" name="email" required placeholder="john@example.com" class="mt-1 block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm
                       focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
        </div>

        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-600 text-white font-semibold px-6 py-3 rounded-md shadow hover:bg-blue-700
                       focus:outline-none focus:ring-2 focus:ring-blue-500 transition">
                Create
            </button>
            <a href="/" class="text-blue-600 font-medium hover:underline">Back</a>
        </div>

    </form>
</div>